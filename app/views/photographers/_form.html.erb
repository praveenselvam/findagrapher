<div class="form">
  <%= form_for(@photographer) do |f| %>
    <% if @photographer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@photographer.errors.count, "error") %> prohibited this photographer from being saved:</h2>

        <ul>
        <% @photographer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <h3 class="span8 offset4">Tell us what you're looking for.</h3>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        I'm interested in shooting:
      </div>
      <div class="f-content span8">
        <% @events.each_with_index do |event| %>
          <div class="option">
            <%= check_box_tag( "photographer[event_list][#{event.id}]", 
                                "1", 
                                @photographer.event_types.detect{|d| d == event}) %>
            <%= "#{event.event}"%>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        I'm willing to offer:
      </div>
      <div class="f-content span8">
        <% @offerings.each_with_index do |o| %>
          <div class="option">
            <%= check_box_tag( "photographer[offering_list][#{o.id}]", 
                                        "1", 
                                        @photographer.offerings.detect{|d| d == o}) %>
            <%= "#{o.offering}"%>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        After the shoot, I can provide:
      </div>
      <div class="f-content span8">
        <% @services.each_with_index do |s| %>
          <div class="option">
            <%= check_box_tag( "photographer[service_list][#{s.id}]", 
                                        "1", 
                                        @photographer.services.detect{|d| d == s}) %>
            <%= "#{s.service}"%>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <h3 class="span8 offset4">A bit about yourself.</h3>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        Your full name:
      </div>
      <div class="f-content span8">
        <%= f.text_field :name %>
      </div>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        Your location:
      </div>
      <div class="f-content span8">
        <%= f.text_field :place %>
      </div>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        Link to your portfolio:
      </div>
      <div class="f-content span8">
        http://<%= f.text_field :portfolio %>
        <br/>
        <div class="note">
          Your facebook page, flickr page or your own website.
        </div>
      </div>
    </div>

    <div class="row">
      <h3 class="span8 offset4">How would you like to be notified?</h3>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        E-Mail:
      </div>
      <div class="f-content span8">
        <%= f.text_field :email %>
        <br/>
        <div class="note">
          <h4>We won't spam you.</h4>
          <div>
            Remember, you can always instantaly turn off this notification once you find your photographer.
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="f-name span4">
        Notify:
      </div>
      <div class="f-content span8">
        <%
          types = ['Once a day', 'Twice a week', 'Once a week']
          types.each_with_index do |o|
        %>
          <div class="option">
            <input type="checkbox" />
            <%= o %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="f-content span8 offset4">
        <%= f.submit "Register", :class => "btn btn-success" %>
      </div>
    </div>

  <% end %>
</div>















































