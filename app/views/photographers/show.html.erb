<div class="container">
  <div class="row">
    <div class="span12">
      <div class="black-box pad-top">
        <div class="title">
          <h2>Praveen Selvam</h2>
        </div>
        <div class="content">

          <!-- This dummy content below is to autorize to facebook. Will be moved somewhere else. -->
          <div class="dummy">
            <a href='/auth/facebook' class="fb_button fb_button_medium" id="login">
              <span class="fb_button_text">Log In</span>
            </a>
            <a href='/auth/facebook' class="fb_button fb_button_medium" id="logout">
              <span class="fb_button_text">Logout</span>
            </a>
            <% if @user %>
              <div>
                Welcome, <strong><%= @user['name'] %></strong>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <div class="black-box pad-top">
        <div class="content" id="portfolio-pictures">
          Loading pictures from portfolio...
        </div>
    </div>
  </div>
</div>

<script>

  $(function(){

    $.ajax({
      url: '<%= photographers_photos_path(@photographer) %>',
      success: function(r){
        var el = $('#portfolio-pictures');
        el.html(r);
        el.find('img').each(function(){
          $(this).load(function(){
            setTimeout(function(){
              el.masonry({
                itemSelector: 'img'
              });
            }, 10);
          });
        });
      }
    })

  })

</script>